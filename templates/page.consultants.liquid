{% assign urlParts = page.url | split: '/' %}
{% assign handle = urlParts | last %}
      {% assign consultantObject = shop.metaobjects.consultants %}
      {% assign customImageUrl = consultantObject[handle].image_url %}
      <input class="visually-hidden" id="consultant-id" value={{ consultantObject[handle].consultant_id }}>
      
      <fieldset class="contact-info">
        <div class="consultant-bg">
          <div class="container page-width">
            <!-- <h2 class="consultant-heading">View Profile</h2> -->
            <div class="sm-flex entire-section">
              <div class="form-section sm-flex entire-section justify-between">
                
                <div>
                  <div class="form-data-item">
                    <div class="flex-item">
                      <div class="profile-picture">
                        <img src="{{ customImageUrl }}" alt="Custom Image"  width=110  height=110 loading="lazy"/>
                      </div>
                    </div>
                    <div class="consultant-details">
                      <p class="constant-name">{{ consultantObject[handle]first_name }} {{ consultantObject[handle]last_name }}</p>
                      <p class="label-section" for="l_name">Consultant ID: <span>{{ consultantObject[handle]consultant_id }}</span></p>
                      <p>Welcome. I’m your Norwex Consultant and I’m here to help with personal service.</p>
                      <!-- <p class="form-data-item">
                        <label class="label-section" for="email">Email:</label>
                      </p> -->
                      <!-- <p class="hide-mobile"><strong><a href="">View Products</a></strong></p> -->
                    </div>
                  </div>
                </div>
                <div class="">
                    <button type="submit" name="" class="product-form__submit button button--full-width button--primary">
                      <span>Shop with me</span>
                    </button>
                    <!-- <div class="show-mobile"><p><strong><a href="">View Products</a></strong></p></div> -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </fieldset>

  <style>
    fieldset {
      border: none;
      padding: 0;
      margin-top: 1em;
      margin-bottom: 1em;
      padding-top: 1em;
      padding-bottom: 1em;
    }
    .consultant-bg {
      background: #F2F4F6;
    }
    .contact-info p {
      margin: 0;
      padding-bottom: 12px;
    }
    .row-reverse {
      flex-direction: row-reverse;
    }
    .flex-item {
      display: flex;
    }
    .items-center {
      align-items: center;
    }
    .justify-between {
      justify-content: space-between;
    }
    .flex-1 {
      flex: 1;
    }
    .pl-30 {
      padding-left: 30px;
    }
    fieldset .consultant-heading {
      font-size: 24px;
      color: #4c5f7f;
      font-weight: 500;
      border-bottom: 1px solid #d9d9d9;
      padding-bottom: 10px;
      width: 100%;
      margin-bottom: 0;
    }
    .label-section {
      font-size: 16px;
      color: #4C5F7F;
      font-weight: 700;
    }
    .form-section .form-data-item {
      font-size: 16px;
      color: #4C5F7F;
      line-height: 21px;
      font-weight: 500;
      display: flex;
      align-items: flex-start;
    }
    .form-section .form-data-item .constant-name {
      color: #6b7280;
      font-size: 24px;
      font-weight: 400;
      text-transform: capitalize;
    }
    .form-section {
       padding: 30px 0; 
    }
    .form-section,
    .image-section {
      width: 80%;
      margin: 0 auto;
    }
    .flex.entire-section {
      display: block;
    }
    .consultant-details {
        letter-spacing: 0;
        padding-left: 30px;
        padding-right: 80px;
        max-width: 600px;
    }
    .consultant-details a, .show-mobile a {
      font-family: 'ObjektivMk2-Bold' !important;
      color: #4C5F7F;
      text-decoration: underline;
    }
    .consultant-details a:hover, .show-mobile a:hover {
      text-decoration: none;
    }
    .profile-picture {
      width: 110px;
      height: 110px;
      overflow: hidden;
      border-radius: 50%;
    }
    .profile-picture img {
      height: auto;
      display: block;
    }
    
    @media (min-width: 768px) {
      .contact-info label {
        width: 170px;
      }
      .sm-flex {
        display: flex;
      }
      .show-mobile {display: none;}
      .button--primary {min-width: 170px;}
    }
    @media (max-width: 767px) {
      .contact-info label {
        min-width: 25%;
        display: inline-block;
      }
      .form-section > .flex-item {
        padding-bottom: 30px;
        justify-content: center;
      }
      .form-section .form-data-item {
        padding-bottom: 6px;
      }
      .form-section .form-data-item .constant-name {
        font-size: 18px;
      }
      .consultant-details {
        font-size: 14px;
      }
      .show-mobile {display: block;margin-top: 20px;text-align: center;}
      .hide-mobile {display: none;}
    }
  </style>
<script>
  
  const consultant_id = document.getElementById("consultant-id").value;
  document.cookie = `consultant_id=${consultant_id}; path=/;`;

</script>