          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        },
        {
          "type": "text",
          "id": "collection_link_label",
          "label": "Collection Link Label"
        },
        {
          "type": "url",
          "id": "collection_link",
          "label": "Collection Link"
        }
